<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ pageTitle or "DTU Chipday - " + site.event_date_display }}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>&#9889;</text></svg>">
    <style>
        :root {
            --bg: #0f1117;
            --bg-card: #1a1d27;
            --bg-card-hover: #222633;
            --accent: #4f8cff;
            --accent-dim: #2d5aa0;
            --text: #e4e6ed;
            --text-dim: #8b90a0;
            --border: #2a2e3d;
            --green: #34d399;
            --orange: #f59e0b;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: var(--bg);
            color: var(--text);
            line-height: 1.6;
        }

        a { color: var(--accent); text-decoration: none; }
        a:hover { text-decoration: underline; }

        /* Navigation */
        nav {
            position: fixed;
            top: 0;
            width: 100%;
            background: rgba(15, 17, 23, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--border);
            z-index: 100;
            padding: 0 1rem;
        }

        nav .nav-inner {
            max-width: 1100px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 60px;
        }

        nav .logo {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--text);
            letter-spacing: -0.5px;
        }

        nav .logo span { color: var(--accent); }

        nav ul {
            list-style: none;
            display: flex;
            gap: 2rem;
        }

        nav ul a {
            color: var(--text-dim);
            font-size: 0.9rem;
            transition: color 0.2s;
        }

        nav ul a:hover { color: var(--text); text-decoration: none; }

        .hamburger {
            display: none;
            background: none;
            border: none;
            color: var(--text);
            font-size: 1.5rem;
            cursor: pointer;
        }

        /* Hero */
        .hero {
            padding: 10rem 1.5rem 5rem;
            text-align: center;
            background: linear-gradient(180deg, #141726 0%, var(--bg) 100%);
        }

        .hero .date-badge {
            display: inline-block;
            background: var(--accent-dim);
            color: #fff;
            padding: 0.4rem 1.2rem;
            border-radius: 2rem;
            font-size: 0.85rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            margin-bottom: 1.5rem;
        }

        .hero h1 {
            font-size: 3.5rem;
            font-weight: 800;
            letter-spacing: -1px;
            margin-bottom: 1rem;
        }

        .hero h1 span { color: var(--accent); }

        .hero p {
            max-width: 600px;
            margin: 0 auto 2.5rem;
            color: var(--text-dim);
            font-size: 1.15rem;
        }

        .hero .cta {
            display: inline-block;
            background: var(--accent);
            color: #fff;
            padding: 0.8rem 2rem;
            border-radius: 0.5rem;
            font-weight: 600;
            font-size: 1rem;
            transition: background 0.2s;
        }

        .hero .cta:hover { background: #3d7ae8; text-decoration: none; }

        .hero .cta-wip {
            display: inline-block;
            background: var(--bg-card);
            color: var(--text-dim);
            border: 1px dashed var(--orange);
            padding: 0.8rem 2rem;
            border-radius: 0.5rem;
            font-weight: 600;
            font-size: 1rem;
            cursor: not-allowed;
            position: relative;
        }

        .hero .cta-wip .construction {
            margin-right: 0.4rem;
        }

        .hero .cta-wip:hover .tooltip {
            opacity: 1;
            visibility: visible;
        }

        .hero .cta-wip .tooltip {
            position: absolute;
            bottom: calc(100% + 10px);
            left: 50%;
            transform: translateX(-50%);
            background: var(--bg-card);
            border: 1px solid var(--orange);
            color: var(--orange);
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            font-size: 0.8rem;
            white-space: nowrap;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.2s;
            pointer-events: none;
        }

        .hero .cta-wip .tooltip::after {
            content: '';
            position: absolute;
            top: 100%;
            left: 50%;
            transform: translateX(-50%);
            border: 6px solid transparent;
            border-top-color: var(--orange);
        }

        .hero .cta-group {
            display: flex;
            justify-content: center;
            gap: 1rem;
            flex-wrap: wrap;
        }

        /* Countdown */
        .countdown {
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            margin-top: 3rem;
        }

        .countdown .unit {
            text-align: center;
        }

        .countdown .num {
            display: block;
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--accent);
            font-variant-numeric: tabular-nums;
        }

        .countdown .label {
            font-size: 0.75rem;
            color: var(--text-dim);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Sections */
        section {
            max-width: 1100px;
            margin: 0 auto;
            padding: 5rem 1.5rem;
        }

        section h2 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            letter-spacing: -0.5px;
        }

        section .subtitle {
            color: var(--text-dim);
            margin-bottom: 2.5rem;
            font-size: 1.05rem;
        }

        .divider {
            border: none;
            border-top: 1px solid var(--border);
            max-width: 1100px;
            margin: 0 auto;
        }

        /* Program */
        .program-item {
            display: flex;
            gap: 2rem;
            padding: 1.25rem 0;
            border-bottom: 1px solid var(--border);
        }

        .program-item:last-child { border-bottom: none; }

        .program-time {
            min-width: 80px;
            font-weight: 700;
            color: var(--accent);
            font-size: 1.05rem;
            font-variant-numeric: tabular-nums;
        }

        .program-content h3 {
            font-size: 1.05rem;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        .program-content .speaker {
            color: var(--text-dim);
            font-size: 0.9rem;
        }

        .program-content .talks {
            margin-top: 0.5rem;
            padding-left: 1rem;
            border-left: 2px solid var(--border);
        }

        .program-content .talks li {
            list-style: none;
            padding: 0.3rem 0;
            font-size: 0.95rem;
            color: var(--text-dim);
        }

        .program-content .talks li strong {
            color: var(--text);
        }

        .program-wip {
            display: inline-block;
            background: var(--orange);
            color: #000;
            padding: 0.2rem 0.6rem;
            border-radius: 0.25rem;
            font-size: 0.75rem;
            font-weight: 700;
            letter-spacing: 0.5px;
            vertical-align: middle;
            margin-left: 0.5rem;
        }

        /* Companies grid */
        .companies-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1rem;
        }

        .company-card {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 0.75rem;
            padding: 1.5rem;
            transition: background 0.2s, border-color 0.2s;
        }

        .company-card:hover {
            background: var(--bg-card-hover);
            border-color: var(--accent-dim);
        }

        .company-card h3 {
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
        }

        .company-card .contact {
            font-size: 0.85rem;
            color: var(--text-dim);
        }

        .company-card .contact a { font-size: 0.85rem; }

        /* Company row (full directory) */
        .company-row {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 0.75rem;
            padding: 1.5rem 2rem;
            margin-bottom: 1rem;
            transition: background 0.2s, border-color 0.2s;
        }

        .company-row:hover {
            background: var(--bg-card-hover);
            border-color: var(--accent-dim);
        }

        .company-row h3 {
            font-size: 1.2rem;
            margin-bottom: 0.5rem;
        }

        .company-row .description {
            color: var(--text-dim);
            font-size: 0.95rem;
            margin-bottom: 0.75rem;
        }

        .company-row .meta {
            font-size: 0.85rem;
            color: var(--text-dim);
        }

        .company-row .meta a { font-size: 0.85rem; }

        /* About */
        .about-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
        }

        .about-card {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 0.75rem;
            padding: 2rem;
        }

        .about-card h3 {
            font-size: 1.2rem;
            margin-bottom: 0.75rem;
        }

        .about-card p {
            color: var(--text-dim);
            font-size: 0.95rem;
        }

        /* Map */
        #map {
            width: 100%;
            height: 300px;
            border-radius: 0.75rem;
            border: 1px solid var(--border);
            margin-top: 1.5rem;
        }

        /* Archive */
        .archive-list {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .archive-item {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 0.75rem;
            padding: 1.5rem 2rem;
            flex: 1;
            min-width: 200px;
            transition: background 0.2s;
        }

        .archive-item:hover { background: var(--bg-card-hover); }

        .archive-item h3 { margin-bottom: 0.5rem; }
        .archive-item p { color: var(--text-dim); font-size: 0.9rem; }

        /* Archive detail page */
        .archive-detail {
            padding-top: 8rem;
        }

        .archive-detail .back-link {
            display: inline-block;
            margin-bottom: 1.5rem;
            color: var(--text-dim);
            font-size: 0.9rem;
        }

        .archive-detail .back-link:hover { color: var(--text); }

        .archive-photos {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1rem;
            margin-top: 1rem;
        }

        .archive-photos img {
            width: 100%;
            border-radius: 0.5rem;
            border: 1px solid var(--border);
        }

        .archive-docs {
            margin-top: 1rem;
        }

        .archive-docs li {
            list-style: none;
            padding: 0.5rem 0;
            border-bottom: 1px solid var(--border);
        }

        .archive-docs li:last-child { border-bottom: none; }

        /* Inner page header */
        .page-header {
            padding: 8rem 1.5rem 3rem;
            text-align: center;
            background: linear-gradient(180deg, #141726 0%, var(--bg) 100%);
        }

        .page-header h1 {
            font-size: 2.5rem;
            font-weight: 800;
            letter-spacing: -1px;
            margin-bottom: 0.5rem;
        }

        .page-header h1 span { color: var(--accent); }

        .page-header p {
            color: var(--text-dim);
            font-size: 1.1rem;
        }

        /* Footer */
        footer {
            border-top: 1px solid var(--border);
            padding: 2rem 1.5rem;
            text-align: center;
            color: var(--text-dim);
            font-size: 0.85rem;
        }

        footer a { color: var(--text-dim); }
        footer a:hover { color: var(--text); }

        /* Responsive */
        @media (max-width: 768px) {
            nav ul { display: none; }
            nav ul.open {
                display: flex;
                flex-direction: column;
                position: absolute;
                top: 60px;
                left: 0;
                right: 0;
                background: rgba(15, 17, 23, 0.98);
                padding: 1rem 1.5rem;
                gap: 1rem;
                border-bottom: 1px solid var(--border);
            }
            .hamburger { display: block; }
            .hero h1 { font-size: 2.2rem; }
            .hero { padding: 8rem 1.5rem 3rem; }
            .countdown { gap: 1rem; }
            .countdown .num { font-size: 1.8rem; }
            .about-grid { grid-template-columns: 1fr; }
            .program-item { gap: 1rem; }
            .page-header h1 { font-size: 2rem; }
        }
    </style>
    {% if needsLeaflet %}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9/dist/leaflet.css" />
    {% endif %}
</head>
<body>

<nav>
    <div class="nav-inner">
        <a href="/" class="logo" style="text-decoration:none">DTU <span>Chipday</span></a>
        <button class="hamburger" onclick="document.querySelector('nav ul').classList.toggle('open')">&#9776;</button>
        <ul>
            {% if isHomepage %}
            <li><a href="#program">Program</a></li>
            <li><a href="/companies/">Companies</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#venue">Venue</a></li>
            <li><a href="/archive/">Archive</a></li>
            {% else %}
            <li><a href="/#program">Program</a></li>
            <li><a href="/companies/">Companies</a></li>
            <li><a href="/#about">About</a></li>
            <li><a href="/#venue">Venue</a></li>
            <li><a href="/archive/">Archive</a></li>
            {% endif %}
        </ul>
    </div>
</nav>

{{ content | safe }}

<footer>
    <p>&copy; {{ site.event_year }} DTU Chipday &middot; Organised by <a href="https://icworks.dk">IC Works</a> and DTU</p>
</footer>

{% if needsLeaflet %}
<script src="https://unpkg.com/leaflet@1.9/dist/leaflet.js"></script>
{% endif %}

{% if isHomepage %}
<script>
    // Countdown
    const target = new Date('{{ site.event_date }}');
    function updateCountdown() {
        const now = new Date();
        const diff = target - now;
        if (diff <= 0) {
            document.getElementById('countdown').innerHTML = '<p style="color:var(--green);font-weight:600;font-size:1.2rem">The event is today!</p>';
            return;
        }
        const d = Math.floor(diff / 86400000);
        const h = Math.floor((diff % 86400000) / 3600000);
        const m = Math.floor((diff % 3600000) / 60000);
        const s = Math.floor((diff % 60000) / 1000);
        document.getElementById('cd-days').textContent = d;
        document.getElementById('cd-hours').textContent = h;
        document.getElementById('cd-mins').textContent = String(m).padStart(2, '0');
        document.getElementById('cd-secs').textContent = String(s).padStart(2, '0');
    }
    updateCountdown();
    setInterval(updateCountdown, 1000);

    // Map with dark tiles
    const map = L.map('map', { scrollWheelZoom: false }).setView([{{ site.map_lat }}, {{ site.map_lng }}], {{ site.map_zoom }});
    L.tileLayer('https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}{r}.png', {
        attribution: '&copy; OSM &amp; CARTO',
        maxZoom: 19
    }).addTo(map);
    L.marker([{{ site.map_lat }}, {{ site.map_lng }}]).addTo(map).bindPopup('<strong>DTU Building 101</strong><br>Chipday venue').openPopup();

    // Smooth scroll & close mobile menu
    document.querySelectorAll('a[href^="#"]').forEach(a => {
        a.addEventListener('click', e => {
            e.preventDefault();
            const el = document.querySelector(a.getAttribute('href'));
            if (el) {
                const offset = 70;
                const top = el.getBoundingClientRect().top + window.pageYOffset - offset;
                window.scrollTo({ top, behavior: 'smooth' });
            }
            document.querySelector('nav ul').classList.remove('open');
        });
    });
</script>
{% endif %}

</body>
</html>
